  <script>
    // Show/Hide sections on nav click
    function showSection(sectionId) {
      const sections = ['timeline', 'surprises', 'bouquet', 'secret', 'passwordSection'];
      sections.forEach(id => {
        document.getElementById(id).style.display = (id === sectionId) ? 'block' : 'none';
      });
    }
    // Start showing timeline by default
    showSection('timeline');

    // Monthly surprises messages (dares)
    const surprises = {
      January: "Try writing a poem about us in under 5 minutes.",
      February: "Send me a spicy emoji-only text and see if I can guess the meaning.",
      March: "Wear your quirkiest outfit and share a selfie with me.",
      April: "Share a secret childhood story you haven't told me before.",
      May: "Sing your favorite song aloud and record it for me.",
      June: "Draw a doodle that reminds you of us and share a pic.",
      July: "Compliment me using only movie quotes for one day.",
      August: "Write a mini story starring us as main characters.",
      September: "Dance for 30 seconds to our favorite song and send the video.",
      October: "Send me a spicy riddle and challenge me to solve it.",
      November: "Share a secret that you have never told me.",
      December: "Write a letter to your future self and share it with me."
    };

    function showSurprise(month) {
      const msg = surprises[month] || "No surprise for this month.";
      document.getElementById('surpriseMessage').textContent = msg;
    }

    // Password and secret reveal
    const password = "hyunam-dong";
    const secretSection = document.getElementById("secret");
    const passwordSection = document.getElementById("passwordSection");
    const passwordBtn = document.getElementById("passwordBtn");
    const passwordInput = document.getElementById("passwordInput");
    const passwordMsg = document.getElementById("passwordMsg");

    passwordBtn.addEventListener("click", () => {
      if(passwordInput.value.trim().toLowerCase() === password) {
        secretSection.style.display = "block";
        passwordSection.style.display = "none";
        passwordMsg.textContent = "";
      } else {
        passwordMsg.textContent = "Incorrect password. Try again!";
      }
    });
  </script>
